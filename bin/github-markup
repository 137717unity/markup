#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + "/../lib"
require 'github/markup'

if ARGV.size < 1
  print "usage: #$0 FILE [ FILES ... ]\n"
  exit
end

sources = []

ARGV.each { |s|
  begin
    file = File.open( s, "r" )
    sources.push [ s, file ]
  rescue Exception => e
    print "error: #{e.message}\n"
  ensure
  end
}

sources.each { |s|
  name,file = s
  print GitHub::Markup.render( name, file.read )
  file.close
}

